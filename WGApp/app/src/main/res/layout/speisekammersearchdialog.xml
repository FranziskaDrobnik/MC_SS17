<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="1">

        <Button
            android:id="@+id/speisekammerRemoveButton"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/ic_action_cancel" />

        <TextView
            android:id="@+id/speisekammerItem"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:padding="2dp"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="?attr/actionMenuTextColor" />

        <TextView
            android:id="@+id/speisekammerAmount"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:padding="2dp"
            android:text="TextView"
            android:textAppearance="@android:style/TextAppearance.Material.Medium"
            android:textColor="?attr/actionMenuTextColor" />

        <Button
            android:id="@+id/speisekammerAddAmount"
            style="@style/Widget.AppCompat.Button.Small"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_weight="0.04"
            android:elevation="0dp"
            android:padding="2dp"
            android:text="+"
            android:textAlignment="center"
            android:textStyle="bold" />

        <Button
            android:id="@+id/speisekammerReduceAmount"
            style="@style/Widget.AppCompat.Button.Small"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="0.01"
            android:elevation="0dp"
            android:padding="2dp"
            android:text="-"
            android:textAlignment="center"
            android:textStyle="bold" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/speisekammerShoppingCart"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/shoppingcart"
            android:padding="2dp" />


    </LinearLayout>
</LinearLayout>